{
  "name": "evm-scripts",
  "version": "0.1.0",
  "description": "web3.js and ether.js scripts",
  "license": "Apache-2.0",
  "author": "Akagi201 <akagi201@gmail.com>",
  "type": "module",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "clean": "rimraf coverage build tmp",
    "dev": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "lint": "eslint . --ext .ts",
    "sort-package": "sort-package-json",
    "web3:transaction": "node --experimental-specifier-resolution=node --loader ts-node/esm src/web3/transaction.ts",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "abi-decoder": "^2.4.0",
    "dayjs": "^1.11.1",
    "tslib": "^2.4.0",
    "web3": "^1.7.3",
    "web3-core": "^1.7.3",
    "web3-eth-contract": "^1.7.3"
  },
  "devDependencies": {
    "@typechain/web3-v1": "^6.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.56.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsutils": "^3.21.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">= 16.14 <17"
  },
  "volta": {
    "node": "16.14.2"
  }
}
